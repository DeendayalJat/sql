-- VIEWS 
-- VIRTUAL TABLE
-- give data based on selecect querry
-- donot store data physically but will acess the data from existing table
-- advantage: make complex querry easier
-- help security
-- view is of 2 type: simple and complex
use dd;
create  table new_actor as
select actor_id,first_name from sakila.actor where actor_id between 1 and 3;
create view actor_v as
select substr(first_name,2) from new_actor;
select * from actor_v;
insert into new_actor value(4,'srk');
-- data will change into view according to original table
-- view insert (complex)
insert into actor_v value(5,'rr');
create view actor_v2 as
select * from new_actor where actor_id in(1,2); -- filter no update in view table if change happen in original other then these 2 row

select *  from actor_v2;
-- simple view change will shown in original
-- dml operation performed
insert into actor_v2 value(5,'salmon');
select * from new_actor;
-- conditions in which we donot make change in original table throw view are:
-- aggregate function
-- distinct groupby having union union all sub query reference etc.
create table npayment as
select payment_id, amount from sakila.payment where payment_id between 1 and 7;
create view payv as
select count(*) as c from npayment;
select * from payv;
insert into payv value(10); -- error Error Code: 1471. The target table payv of the INSERT is not insertable-into
